package br.com.projeto.rh.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import br.com.projeto.rh.model.Departamento;
import java.util.List;


public interface DepartamentoRepository extends JpaRepository<Departamento, Integer> {

	@Query("select d from Departamento d where d.nome like %?1% ")
	List<Departamento> findByNome(String nome);
	
	
	@Query("select d.nome,SUM(f.salario) from Departamento d,Funcionario f,Cargos C where"
			+ " d.codigo = c.d.codigo and c.codigo = f.c.codigo"
			+ " GROUP BY d.nome")
	List<Departamento> gastos();
	
	
	
	
	
}
