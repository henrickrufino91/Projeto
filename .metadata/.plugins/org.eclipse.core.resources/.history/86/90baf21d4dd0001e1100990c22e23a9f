package br.com.projeto.rh.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import br.com.projeto.rh.model.Cargos;
import java.util.List;


public interface CargosRepository extends JpaRepository<Cargos, Integer> {

	@Query("select c from Cargos c where c.nome like %?1% ")
	List<Cargos> findByNome(String nome);
	
	
}
